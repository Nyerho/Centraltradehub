rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User can read/write only their own KYC files
    match /kyc/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Admin can list/read all KYC files (requires custom claims)
    match /kyc/{allUsers=**} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if false; // No admin writes to Storage by default
    }
  }
}