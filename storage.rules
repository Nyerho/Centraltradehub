rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can read/write inside their own KYC folder: kyc/{uid}/**
    match /kyc/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Admins can read/list the entire KYC namespace
    match /kyc/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Lock down everything else (adjust as needed)
    match /{path=**} {
      allow read, write: if false;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
  }
}